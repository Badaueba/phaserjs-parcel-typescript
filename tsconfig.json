{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"outDir": "./dist/",
		"target": "ES6",
		"sourceMap": false,
		"noImplicitAny": true,
		"strict": false,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@src/*": ["./src/"],
			"@cli/*": ["./cli/"]
		}
	},

	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts", "cli/*"]
}
